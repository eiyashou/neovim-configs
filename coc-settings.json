{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "latex": {
            "command": "texlab",
            "ignoredRootPaths": ["~"],
            "filetypes": ["tex", "bib", "plaintex", "context"],
            "initializationOptions": {
                "latex": {
                    "build": {
                        "onSave": true
                    },
                    "lint": {
                        "onSave": true,
                        "onChange": false
                    }
                }
            }
        }
    }
}
